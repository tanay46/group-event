<h1>Listing users</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn-mini btn-primary'  %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class => 'btn-mini btn-primary'  %></td>
  </tr>
<% end %>
</table>

